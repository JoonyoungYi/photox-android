<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__action_bar_default_height"
        layout="@layout/base_actionbar"
        android:background="#2F2F2F" />

    <kr.photox.android.lib.JoonTextView
        android:id="@+id/subtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:background="#282828"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/summary_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12.5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12.5dp"
            android:layout_weight="1"
            android:background="@drawable/base_empty_photo"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ts_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2.5dp"
                android:text="2013. 08. 01"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2.5dp"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp"
                android:text="위치정보를 불러오는 중입니다"
                android:textColor="#777777"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/message_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e5e5e5"
                android:gravity="top|left"
                android:hint="사진과 함께 공유할 메세지를 입력해 주세요."
                android:padding="2.5dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:background="#aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="12.5dp"
        android:orientation="horizontal" >

        <include
            android:id="@+id/fb_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12.5dp"
            android:layout_weight="1"
            layout="@layout/camera_share_btn" />

        <include
            android:id="@+id/twitter_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/camera_share_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:orientation="horizontal" >

        <include
            android:id="@+id/ks_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12.5dp"
            android:layout_weight="1"
            layout="@layout/camera_share_btn" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="12.5dp"
        android:background="@drawable/camera_share_completed"
        android:text="완료"
        android:textColor="#FFFFFF" />

</LinearLayout>