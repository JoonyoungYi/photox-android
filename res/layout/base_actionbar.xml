<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/kr.photox.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e3e3e"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/actionbar_left_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/base_actionbar_setting" />

    <kr.photox.android.lib.JoonTextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Why.Widget.ActionBar.Title"
        android:textColor="#FFFFFF"
        app:boldLevel="1" />

    <ImageButton
        android:id="@+id/actionbar_right_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/base_actionbar_search" />

</LinearLayout>