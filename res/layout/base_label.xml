<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40sp" >

        <LinearLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ec394b"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:background="#55000000"
                android:padding="5dp"
                android:src="@drawable/x_activity_lv_campaign_activated" />

            <kr.photox.android.lib.JoonTextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:text="Nearby"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="fitStart"
            android:src="@drawable/base_label_bg_shadow" />

        <Button
            android:id="@+id/label_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/base_btn" />
    </FrameLayout>

</LinearLayout>