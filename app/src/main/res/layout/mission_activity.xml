<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- -->

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#1E9A9A" />

        <!-- -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F2"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카페 알베르에서 당근 케잌 먹어보고, 친구한테도 먹어보라고 하기(30점)"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/todo_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="저장하기" />

                <Button
                    android:id="@+id/location_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="위치보기" />

                <Button
                    android:id="@+id/checkin_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="체크인" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

        </LinearLayout>


        <!-- -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F2"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/rating_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="평균 별점"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/rating_tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="0명" />

                    <TextView
                        android:id="@+id/rating_indicator_1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="1"
                        android:textSize="15dp"
                        android:gravity="bottom|center_horizontal"
                        android:background="#E8C357" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/rating_tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="0명" />

                    <TextView
                        android:id="@+id/rating_indicator_2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="2"
                        android:textSize="15dp"
                        android:gravity="bottom|center_horizontal"
                        android:background="#E8C357" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/rating_tv_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:minHeight="20dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:text="0명" />

                    <TextView
                        android:id="@+id/rating_indicator_3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="3"
                        android:textSize="15dp"
                        android:gravity="bottom|center_horizontal"
                        android:background="#E8C357" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/rating_tv_4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="0명" />

                    <TextView
                        android:id="@+id/rating_indicator_4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="4"
                        android:textSize="15dp"
                        android:gravity="bottom|center_horizontal"
                        android:background="#E8C357" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/rating_tv_5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="0명" />

                    <TextView
                        android:id="@+id/rating_indicator_5"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="5"
                        android:textSize="15dp"
                        android:gravity="bottom|center_horizontal"
                        android:background="#E8C357" />


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

        </LinearLayout>


        <!-- -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F2"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="해당되는 캠페인"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="서울에 있는 카페 다 돌기"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>



