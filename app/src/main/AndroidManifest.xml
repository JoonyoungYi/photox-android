<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.photox.android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Photox">
        <activity
            android:login_key="kr.photox.android.SplashActivity"
            android:theme="@style/Theme.Photox.NoActionBar">
            <intent-filter>
                <action android:login_key="android.intent.action.MAIN" />

                <category android:login_key="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:login_key="kr.photox.android.XActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:login_key="kr.photox.android.LoginActivity"
            android:label="@string/title_activity_login"></activity>

        <!-- Meta Data -->
        <meta-data
            android:login_key="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />

    </application>

</manifest>
